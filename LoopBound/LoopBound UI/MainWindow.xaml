<Window x:Class="LoopBound_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoopBound_UI"
        mc:Ignorable="d"
        Title="LoopBound" Height="680" Width="780"
        Focusable="True"
        KeyDown="Window_KeyDown">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Background Map -->
        <Label x:Name="MainScreen" Grid.Row="0" Grid.Column="0" Background="Black">
            <Grid>
                <Image x:Name="Background_Map" Stretch="Fill" Source="/Assets/Map 1.png" Width="770"/>

                <!-- Canvas for Restricted Zones -->
                <Canvas x:Name="RestrictedZonesOverlay" IsHitTestVisible="False">
                    
                    <!-- Restricted Zone 1 -->
                    <Rectangle Width="310" Height="277"
                              Fill="Red" Opacity="0.5" Stroke="Black" StrokeThickness="2" RenderTransformOrigin="2.575,0.62" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <!-- Restricted Zone 2 -->
                    <Rectangle Canvas.Left="454" Width="316" Height="276"
                              Fill="Red" Opacity="0.5" Stroke="Black" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <!-- Restricted Zone 3 -->
                    <Rectangle Canvas.Left="310" Width="144" Height="204"
                        Fill="Red" Opacity="0.5" Stroke="Black" StrokeThickness="2" RenderTransformOrigin="2.575,0.62" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <!-- Restricted Zone 4-->
                    <Rectangle Width="770" Height="86"
                        Fill="Red" Opacity="0.5" Stroke="Black" StrokeThickness="2" RenderTransformOrigin="2.575,0.62" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="418"/>

                </Canvas>
            </Grid>
        </Label>


        <Image x:Name="Player" Source="/Assets/Player.png" Margin="22,286,660,127" Cursor="ArrowCD"/>
        <Label x:Name="BottomUI" Grid.Row="1" Grid.Column="0" Background="Black">
            <Image x:Name="UI_Bar" Source="/Assets/Normal UI Bar.png" Stretch="Fill" Width="770"/>
        </Label>
        <Image x:Name="Heart_Icon" Margin="34,57,680,57" Source="/Assets/Heart Icon.png" Grid.Row="1"/>

    </Grid>
</Window>
